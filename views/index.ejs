<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="./custom.css">
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #f8f9fb;
            color: #333;
        }

        .header {
            background-color: #08960b;
            color: #fff;
            padding: 20px 0;
            text-align: center;
            border-bottom: 4px solid #0056b3;
        }

        h1,
        h2 {
            font-weight: 700;
        }

        .btn-custom {
            background-color: #08960b;
            color: #fff;
            border-radius: 20px;
            padding: 10px 20px;
            transition: all 0.3s ease;
        }

        .btn-custom:hover {
            background-color: #0056b3;
            color: #fff;
        }

        .table-custom thead {
            background-color: #08960b;
            color: #fff;
        }

        .table-custom tbody tr {
            transition: all 0.2s ease;
            background-color: #000000;
            color: #fff;
            cursor: pointer;


        }

        .table-custom tbody tr:hover {
            background-color: #000000;
            color: #fff;

        }

        .btn-edit,
        .btn-delete {
            border-radius: 20px;
            transition: all 0.3s ease;
            color: #fff;
            padding: 5px 15px;
            font-size: 14px;
        }

        .btn-edit {
            background-color: #17a2b8;
            border: none;
        }

        .btn-edit:hover {
            background-color: #138496;
        }

        .btn-delete {
            background-color: #dc3545;
            border: none;
        }

        .btn-delete:hover {
            background-color: #c82333;
        }

        table {
            margin-top: 20px;
            border-radius: 10px;
            overflow: hidden;
        }

        th,
        td {
            text-align: center;
            vertical-align: middle;
            padding: 15px;
        }

        .container {
            margin-top: 30px;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        .table-responsive {
            margin-top: 20px;
            border-radius: 8px;
            overflow: hidden;
            background: #fff;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        }
    </style>
</head>

<body>
    <div class="header">
        <h1>Expense Tracker</h1>
    </div>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center my-4">
            <h2>Transaction History</h2>
        </div>
        <div>
            <a href="/addForm" class="btn btn-custom"><i class="fas fa-plus"></i> Add Transaction</a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-custom">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Amount</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% eTransaction.forEach(transaction => { %>
                        <tr>
                            <td><%= transaction.type %></td>
                            <td><%= transaction.date.toDateString() %></td>
                            <td><%= transaction.description %></td>
                            <td><%= transaction.category %></td>
                            <td>â‚¹<%= transaction.amount %></td>
                            <td>
                                <a href="/editTracker/<%= transaction._id %>" class="btn btn-sm btn-edit"><i
                                        class="fas fa-edit"></i> Edit</a>
                                <a href="/deleteTracker/<%= transaction._id %>" class="btn btn-sm btn-delete"><i
                                        class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <!-- Bootstrap and FontAwesome JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
